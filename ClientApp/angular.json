{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "cli": {
    "analytics": "f2144aae-aaa2-4bd3-83a8-7f10303dc920"
  },
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "BizDoc.Site": {
      "root": "",
      "sourceRoot": "src",
      "projectType": "application",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "dist",
            "index": "src/index.html",
            "main": "src/main.ts",
            "tsConfig": "src/tsconfig.app.json",
            "progress": true,
            "polyfills": "src/polyfills.ts",
            "assets": [
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/i18n/cldr-data",
                "output": "./assets/i18n/cldr-data"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/i18n/cldr-data/main",
                "output": "./assets/i18n/cldr-data/main"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/cldr-data/main/he",
                "output": "./assets/i18n/cldr-data/main/he"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/sounds",
                "output": "./assets/sounds"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/sounds",
                "output": "./assets/animations"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/themes",
                "output": "./assets/themes"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/icons",
                "output": "./assets/icons"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets/js",
                "output": "./js"
              },
              {
                "glob": "*",
                "input": "./node_modules/@bizdoc/core/assets",
                "output": "."
              },
              "src/assets"
            ],
            "styles": [
              "src/styles.less",
              {
                "input": "./node_modules/@bizdoc/core/assets/themes/default.min.css"
              }
            ],
            "scripts": []
          },
          "defaultConfiguration": "development",
          "configurations": {
            "production": {
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": true,
              "vendorChunk": false,
              "buildOptimizer": true,
              "fileReplacements": [
                {
                  "replace": "src/environments/environment.ts",
                  "with": "src/environments/environment.prod.ts"
                }
              ]
            },
            "development": {
              "optimization": false,
              "sourceMap": true,
              "vendorChunk": true,
              "buildOptimizer": false
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "BizDoc.Site:build"
          },
          "defaultConfiguration": "development",
          "configurations": {
            "production": {
              "browserTarget": "BizDoc.Site:build:production"
            },
            "development": {
              "browserTarget": "BizDoc.Site:build:development"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {
            "browserTarget": "BizDoc.Site:build"
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "src/test.ts",
            "karmaConfig": "./karma.conf.js",
            "polyfills": "src/polyfills.ts",
            "tsConfig": "src/tsconfig.spec.json",
            "scripts": [],
            "styles": [
              "src/styles.css"
            ],
            "assets": [
              "src/assets"
            ]
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "src/tsconfig.app.json",
              "src/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    },
    "BizDoc.Site-e2e": {
      "root": "",
      "sourceRoot": "e2e",
      "projectType": "application",
      "architect": {
        "e2e": {
          "builder": "@angular-devkit/build-angular:protractor",
          "options": {
            "protractorConfig": "./protractor.conf.js",
            "devServerTarget": "BizDoc.Site:serve"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "e2e/tsconfig.e2e.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "BizDoc.Site",
  "schematics": {
    "@schematics/angular:component": {
      "prefix": "app",
      "styleext": "css"
    },
    "@schematics/angular:directive": {
      "prefix": "app"
    }
  }
}
